# EditorConfig for hybar WoW addon
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Lua files - tabs with 4-space width
[*.lua]
indent_style = tab
indent_size = 4

# Markdown files - spaces, preserve trailing whitespace for line breaks
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files - spaces
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# TOC files (WoW addon table of contents)
[*.toc]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2
